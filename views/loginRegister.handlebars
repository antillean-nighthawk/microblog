{{! Use the main layout }}
{{!< main }}

<div class="container-fluid row">
    <section class="login-area w-50">
        <div class="card">
            <div class="card-header">Experienced PlantToucher?</div>
            <h2 class="card-title m-3 text-center">(¯`’•.¸(¯`’•.¸*♫♪ Login ♫♪*¸.•’´¯)¸.• ‘´¯)</h2>
            <!-- errors will appear here -->
            {{#if loginError}}
            <div class="invalid-feedback">
                <p class="p-3 mb-2 bg-danger text-white">{{loginError}}</p>
            </div>
            {{/if}}
            <form action="/login" method="POST" class="m-3">
                <!-- the login form goes here -->        
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="username" class="form-control" name="login_username" id="login_username">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">Login</button>
                </div>
            </form>
        </div>
    </section>

    <section class="login-area w-50">
        <div class="card">
            <div class="card-header">New to PlantTouching?</div>
            <h2 class="card-title m-3 text-center">•¤»((¯♥¯))«¤• Register •¤»((¯♥¯))«¤•</h2>
            <!-- errors will appear here -->
            {{#if regError}}
                <p class="p-3 mb-2 bg-danger text-white">{{regError}}</p>
            {{/if}}
            <form action="/register" method="POST" class="m-3">
                <!-- the registration form goes here -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="username" class="form-control" name="register_username" id="register_username">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">Register</button>
                </div>
            </form>
        </div>
    </section>
</div>