            {{#if regError}}
                <p class="p-3 mb-2 bg-danger text-white text-center">{{regError}}</p>
            {{/if}}
            <form action="/registerUsername" method="POST" class="m-3">
                <!-- the registration form goes here -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="username" class="form-control" name="register_username" id="register_username">
